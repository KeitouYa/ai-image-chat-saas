# Database Configuration
DATABASE_URL=
# ============================================
# Redis Configuration (Upstash)
# ============================================
# Upstash Redis REST API URL
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://major-frog-23426.upstash.io
# Upstash Redis REST API Token
# Security token from Upstash console
UPSTASH_REDIS_REST_TOKEN=YOUR_TOKEN


# ============================================
# Authentication Configuration (Clerk)
# ============================================
# Clerk publishable key (used on client-side)
# Get from: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
# Clerk secret key (used on server-side)
# Private key from Clerk console - DO NOT expose to client
CLERK_SECRET_KEY=


# ============================================
# Image Storage Configuration (Cloudinary)
# ============================================
# Cloudinary cloud name
# Get from: https://cloudinary.com/console/
CLOUDINARY_CLOUD_NAME=
# Cloudinary API Key
CLOUDINARY_API_KEY=
# Cloudinary API Secret (Private)
CLOUDINARY_API_SECRET=


#============================================
# Payment Configuration (PayPal, Optional)
# ============================================
# PayPal Client ID (Public)
# Get from: https://developer.paypal.com/
NEXT_PUBLIC_PAYPAL_CLIENT_ID=


# ============================================
# Image Generation Configuration (Replicate)
# ============================================
# Replicate API Token
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=
# ============================================
# AI Provider Configuration
# ============================================
# Google Gemini AI API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API Key (Optional)
# Get from: https://platform.openai.com/api-keys
# Used as fallback AI service when Gemini fails
OPENAI_API_KEY=

# === Chat service behavior ===
METRICS_ENABLED=true
SIMULATE_GEMINI_FAILURE=false
DISABLE_CHAT_CREDITS=false
DISABLE_CHAT_CACHE=false